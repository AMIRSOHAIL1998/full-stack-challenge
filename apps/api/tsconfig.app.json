{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": false,
    "composite": false,
    "allowJs": true,
    "target": "ES2020",
    "module": "CommonJS"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/database/knexfile.ts",
    "src/app/helper/generateUniqueId.ts",
    "src/app/helper/userSchemaValidation.ts",
    "src/database/connection.ts",
    "src/database/seeds/users.js",
    "src/database/migrations/*.ts"
  ]
}
