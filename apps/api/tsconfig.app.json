{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "declaration": true,
    "composite": true,
    "allowJs": true,
    "target": "ES2020",
    "module": "CommonJS"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/database/knexfile.js",
    "src/app/helper/generateUniqueId.ts",
    "src/app/helper/userSchemaValidation.ts",
    "src/database/connection.js",
    "src/database/seeds/users.js",
    "src/database/migrations/*.js" // Include migration files
  ]
}
